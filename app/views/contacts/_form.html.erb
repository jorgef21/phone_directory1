<%= form_for(@contact) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :Nombre %>
    <%= f.text_field :name_employee,{class:'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.label :Telefono %>
    <%= f.text_field :phone_number,{class:'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email,{class:'form-control',type:'email',placeholder:'Email'} %>
  </div>
  <div class="form-group">
    <%= f.label :Sucursal %>
    <%= f.select 'branch_id', options_for_select(@branches.collect{ |u| [u.iata, u.id] }) %>
  </div>
  <div class="form-group">
    <%= f.label :Celular %>
    <%= f.text_field :mobile_phone,{class:'form-control'} %>
  </div>
  <div class="checkbox">
    <%= f.label :stus_flag do %>
    <%= f.check_box :stus_flag %> Activo?
    <%end%> 
  </div>
  
    <%= f.submit :Guardar,{class:'btn btn-success'}%>
  
<% end %>
